<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-detect_csv" version="0.0.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>detect_csv</name>

    <js-module name="detect_csv" src="www/detect_csv.js">
        <clobbers target="detect_csv" />
    </js-module>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">

            <feature name="detect_csv">
                <param name="ios-package" value="detect_csv" />
            </feature>

        </config-file>

        <!-- Add in the plugin .swift files here -->
        <source-file src="src/ios/detect_csv.swift" />

        <!-- Add in the swift-support plugin by default -->
        <dependency id="cordova-plugin-add-swift-support" version="1.7.2"/>
    </platform>
</plugin>